6) Write a program to implement the following operations on a Sparse Matrix,
assuming the matrix is represented using a triplet.
(a) Transpose of a matrix.
(b) Addition of two matrices.
(c) Multiplication of two matrices.

#include <iostream>
using namespace std;

const int MAX = 100;   

struct Term {
    int row, col, val;
};

void readSparse(Term a[]) {
    int rows, cols, t;
    cout << "Enter number of rows, columns and non-zero elements: ";
    cin >> rows >> cols >> t;

    a[0].row = rows;
    a[0].col = cols;
    a[0].val = t;

    cout << "Enter row, column and value for each non-zero element (0-based indices):\n";
    for (int i = 1; i <= t; i++) {
        cin >> a[i].row >> a[i].col >> a[i].val;
    }
}

void printSparse(Term a[]) {
    cout << "Rows = " << a[0].row << ", Cols = " << a[0].col
         << ", Non-zero = " << a[0].val << endl;
    cout << "Row  Col  Val\n";
    for (int i = 1; i <= a[0].val; i++) {
        cout << a[i].row << "    " << a[i].col << "    " << a[i].val << endl;
    }
}


void transpose(Term a[], Term b[]) {
    int rows = a[0].row;
    int cols = a[0].col;
    int t = a[0].val;

    b[0].row = cols;
    b[0].col = rows;
    b[0].val = t;

    int k = 1;
    for (int c = 0; c < cols; c++) {
        for (int i = 1; i <= t; i++) {
            if (a[i].col == c) {
                b[k].row = a[i].col;
                b[k].col = a[i].row;
                b[k].val = a[i].val;
                k++;
            }
        }
    }
}


void addSparse(Term a[], Term b[], Term c[]) {
    if (a[0].row != b[0].row || a[0].col != b[0].col) {
        cout << "Matrices cannot be added (dimensions not equal).\n";
        c[0].val = 0;
        return;
    }

    c[0].row = a[0].row;
    c[0].col = a[0].col;

    int t1 = a[0].val;
    int t2 = b[0].val;
    int i = 1, j = 1, k = 1;

    while (i <= t1 && j <= t2) {
        // Compare positions (row, col)
        if (a[i].row < b[j].row ||
           (a[i].row == b[j].row && a[i].col < b[j].col)) {
            c[k++] = a[i++];
        } else if (b[j].row < a[i].row ||
                  (b[j].row == a[i].row && b[j].col < a[i].col)) {
            c[k++] = b[j++];
        } else {
            // same position
            int sum = a[i].val + b[j].val;
            if (sum != 0) {
                c[k].row = a[i].row;
                c[k].col = a[i].col;
                c[k].val = sum;
                k++;
            }
            i++;
            j++;
        }
    }

    
    while (i <= t1) c[k++] = a[i++];
    while (j <= t2) c[k++] = b[j++];

    c[0].val = k - 1;
}

void multiplySparse(Term a[], Term b[], Term c[]) {
    if (a[0].col != b[0].row) {
        cout << "Matrices cannot be multiplied (A.cols != B.rows).\n";
        c[0].val = 0;
        return;
    }

    c[0].row = a[0].row;
    c[0].col = b[0].col;
    c[0].val = 0;

    int t1 = a[0].val;
    int t2 = b[0].val;
    int k = 1;  


    for (int i = 1; i <= t1; i++) {
        for (int j = 1; j <= t2; j++) {
            if (a[i].col == b[j].row) {
                int r = a[i].row;
                int col = b[j].col;
                int product = a[i].val * b[j].val;

                int pos;
                for (pos = 1; pos < k; pos++) {
                    if (c[pos].row == r && c[pos].col == col) {
                        c[pos].val += product;
                        break;
                    }
                }

                if (pos == k) {
                    c[k].row = r;
                    c[k].col = col;
                    c[k].val = product;
                    k++;
                }
            }
        }
    }

    c[0].val = k - 1;
}

int main() {
    Term A[MAX], B[MAX], C[MAX];
    int choice;

    do {
        cout << "\n===== Sparse Matrix (Triplet Representation) =====\n";
        cout << "1. Read Matrix A\n";
        cout << "2. Read Matrix B\n";
        cout << "3. Display Matrix A\n";
        cout << "4. Display Matrix B\n";
        cout << "5. Transpose of A\n";
        cout << "6. Add A + B\n";
        cout << "7. Multiply A * B\n";
        cout << "8. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "\n--- Enter Matrix A ---\n";
                readSparse(A);
                break;

            case 2:
                cout << "\n--- Enter Matrix B ---\n";
                readSparse(B);
                break;

            case 3:
                cout << "\n--- Matrix A (Triplet Form) ---\n";
                printSparse(A);
                break;

            case 4:
                cout << "\n--- Matrix B (Triplet Form) ---\n";
                printSparse(B);
                break;

            case 5:
                cout << "\n--- Transpose of A ---\n";
                transpose(A, C);
                printSparse(C);
                break;

            case 6:
                cout << "\n--- A + B ---\n";
                addSparse(A, B, C);
                if (C[0].val > 0)
                    printSparse(C);
                break;

            case 7:
                cout << "\n--- A * B ---\n";
                multiplySparse(A, B, C);
                if (C[0].val > 0)
                    printSparse(C);
                break;

            case 8:
                cout << "Exiting...\n";
                break;

            default:
                cout << "Invalid choice!\n";
        }

    } while (choice != 8);

    return 0;
}


7) Let A[1 â€¦. n] be an array of n real numbers. A pair (A[i], A[j ]) is said to be an
inversion if these numbers are out of order, i.e., i < j but A[i]>A[j ]. Write a program to
count the number of inversions in an array.

#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    int A[n];
    cout << "Enter elements: ";
    for (int i = 0; i < n; i++)
        cin >> A[i];

    int count = 0;

    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (A[i] > A[j]) {
                count++;
            }
        }
    }

    cout << "Number of inversions = " << count;
    return 0;
}

8) Write a program to count the total number of distinct elements in an array of
length n.

#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    int arr[n];
    cout << "Enter elements: ";
    for (int i = 0; i < n; i++)
        cin >> arr[i];

    int distinct = 0;

    for (int i = 0; i < n; i++) {
        bool seen = false;

        for (int j = 0; j < i; j++) {
            if (arr[i] == arr[j]) {
                seen = true;
                break;
            }
        }

        if (!seen) distinct++;
    }

    cout << "Total distinct elements = " << distinct;

    return 0;
}
